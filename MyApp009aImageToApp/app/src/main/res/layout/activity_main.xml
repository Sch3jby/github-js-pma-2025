<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- DrawingView pro kreslení -->
    <com.example.myapp009aImagetoapp.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F0F0F0" />

    <!-- Ovládací tlačítka -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Načíst obrázek"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smazat kreslení"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Výběr barev -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barva: "
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/btnColorRed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#FF0000"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/btnColorBlue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0000FF"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/btnColorGreen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FF00"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/btnColorBlack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/btnColorYellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#FFFF00"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- SeekBar pro tloušťku čáry -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tloušťka: "
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekBarBrushSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="50"
            android:progress="10"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvBrushSize"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>