<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎯 Uhádni číslo"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Myslím si číslo od 1 do 10"
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/etUserGuess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Zadej číslo"
        android:inputType="number"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:textColorHint="#999999" />

    <Button
        android:id="@+id/btnGuess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tipnout!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokusy: 0"
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Výhry: 0"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nová hra"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF9800" />

</LinearLayout>